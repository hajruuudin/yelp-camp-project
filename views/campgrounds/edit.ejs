<% layout('layouts/boilerplate.ejs') %>

<div class="container d-flex flex-column"></div>
    <h1 class="align-self-center">Edit Campground</h1>

    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
        <div class="mb-3">
        <label for="title" class="form-label">Campground title:</label>
        <input type="text" class="form-control" id="title" name="campground[title]" value='<%= camp.title %>'>
        </div>

        <div class="mb-3">
        <label for="location" class="form-label">Campground Location:</label>
        <input type="text" class="form-control" id="location" name="campground[location]" value='<%= camp.location %>'>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Campground Image Url</label>
            <input type="text" class="form-control" id="image" name="campground[image]" value='<%= camp.image %>'>
        </div>

        <label for="price" class="form-label">Campground Price</label>
        <div class="input-group mb-3">
            <span class="input-group-text" id="price-addon">$</span>
            <input type="number" class="form-control" id="price" name="campground[price]" value='<%= camp.price %>' aria-describedby="price-addon">
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Campground Decription:</label>
            <textarea rows="5" type="text" class="form-control" id="description" name="campground[description]"><%= camp.description  %></textarea>
        </div>

        <button type="submit" class="btn btn-info">Update Campground</button>
    </form>
 

    <a href="/campgrounds">Back to all campgrounds</a>
<% layout('layouts/boilerplate.ejs') %>