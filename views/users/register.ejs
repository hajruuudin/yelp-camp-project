<% layout('layouts/boilerplate.ejs') %>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-2 col-1"></div>
        <div class="col-md-8 p-5 d-flex flex-column justify-content-center border border-opacity-25 border-white bg-secondary-subtle rounded bg-opacity-25 ">
            <h1 class="text-center">Register</h1>

            <form action="/register" method="POST" novalidate class="validated-form d-flex flex-column">
                <div class="mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please give a username!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please give an email!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please give a password!
                    </div>
                </div>

                <button type="submit" class="btn btn-warning align-self-center mt-4" style="width: 200px;">Register</button>
            </form>
        </div>
        <div class="col-md-2 col-1"></div>
    </div>
</div>