<% layout('layouts/boilerplate.ejs') %>
<div class="container mt-5">

    <div class="row">
        <div class="col-md-2 col-1"></div>
        <div class="col-md-8 p-5 d-flex flex-column justify-content-center border border-opacity-25 border-white bg-secondary-subtle rounded" >
            <h1 class="d-1 text-center">Login</h1>

            <form action="/login" method="POST" novalidate class="validated-form d-flex flex-column">
                <div class="mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please give a username!
                    </div>
                </div>
        
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please give a password!
                    </div>
                </div>
        
                <button type="submit" class="btn btn-warning mt-3 align-self-center" style="width: 200px;">Login</button>
            </form>
        </div>
        <div class="col-md-2 col-1"></div>
    </div>
</div>